@page
@model Shaos.Pages.PlugIns.PackageInformationModel

@{
    ViewData["Title"] = "PlugIn Package Information";
}

<h1>PlugIn Package Information</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <dl class="row">
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.PlugInInformation!.Name)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.PlugInInformation!.Name)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.PlugInInformation!.Description)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.PlugInInformation!.Description)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.PlugInInformation!.AssemblyFile)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.PlugInInformation!.AssemblyFile)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.PlugInInformation!.AssemblyVersion)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.PlugInInformation!.AssemblyVersion)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.PlugInInformation!.TypeName)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.PlugInInformation!.TypeName)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.PlugInInformation!.HasConfiguration)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.PlugInInformation!.HasConfiguration)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.PlugInInformation!.HasLogger)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.PlugInInformation!.HasLogger)
            </dd>
        </dl>
        <hr />
        <dl>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.PackageDetails!.ExtractedPath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PackageDetails!.ExtractedPath)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.PackageDetails!.PlugInFile)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PackageDetails!.PlugInFile)
            </dd>
        </dl>
        <div class="row">
            <div class="col-sm-6">
                <form method="post">
                    <button type="submit" class="btn btn-sm btn-success" asp-page-handler="Save" asp-route-plugInFile="@Model.PackageDetails!.PlugInFile" asp-route-extractedpath="@Model.PackageDetails!.ExtractedPath">
                        Next
                        <svg bootstrap-icon="Floppy" width="18" height="18" aria-label="Save"></svg>
                    </button>
                </form>
            </div>
            <div class="col-sm-6">
                <form method="post">
                    <button type="submit" class="btn btn-sm btn-primary" asp-page-handler="Cancel" asp-route-filename="@Model.PackageDetails!.FileName" asp-route-extractedpath="@Model.PackageDetails!.ExtractedPath">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
