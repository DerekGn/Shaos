@page
@model Shaos.Pages.PlugIns.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PlugIn</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlugIn.Name" class="control-label"></label>
                <input asp-for="PlugIn.Name" class="form-control" />
                <span asp-validation-for="PlugIn.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlugIn.Description" class="control-label"></label>
                <input asp-for="PlugIn.Description" class="form-control" />
                <span asp-validation-for="PlugIn.Description" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="PlugIn.Id" />
            <input type="hidden" asp-for="PlugIn.CreatedDate" />
            <input type="hidden" asp-for="PlugIn.UpdatedDate" />

            <h4>Package</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Package.AssemblyFile)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Package.AssemblyFile)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Package.FileName)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Package.FileName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Package.Version)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Package.Version)
                </dd>
                <dt class="col-sm-4">
                    Upload Package
                </dt>
                <dd class="col-sm-6">
                    <input type="file" />
                </dd>
            </dl>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
