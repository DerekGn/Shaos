@page
@model Shaos.Pages.PlugInInstances.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>PlugIn Instances</h1>
<hr />
<p>
    <a asp-page="Create" asp-route-id="@Model.Id" class="btn btn-sm btn-primary" title="Create">
        <span>
            <svg bootstrap-icon="Plus" width="24" height="24" aria-label="PlugIn"></svg>
        </span>
        Create
    </a>
</p>

@{
    var backToListDisabled = string.IsNullOrEmpty(Model.CurrentFilter) ? "disabled" : "";
}

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-sm btn-primary" /> |
            <a asp-page="./Index" class="btn btn-sm btn-primary @backToListDisabled">Back To List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(_ => _.List[0].Enabled)
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-id="@Model.Id"
                   asp-route-sortOrder="@Model.IdSort"
                   asp-route-currentFilter="@Model.CurrentFilter">
                    @Html.DisplayNameFor(_ => _.List[0].Id)
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-id="@Model.Id"
                   asp-route-sortOrder="@Model.NameSort"
                   asp-route-currentFilter="@Model.CurrentFilter">
                    @Html.DisplayNameFor(_ => _.List[0].Name)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(_ => _.List[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(_ => _.List[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(_ => _.List[0].UpdatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.List)
        {
            <tr>
                <td>
                    @Html.DisplayFor(_ => item.Enabled)
                </td>
                <td>
                    @Html.DisplayFor(_ => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(_ => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(_ => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(_ => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(_ => item.UpdatedDate)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                        <span>
                            <svg bootstrap-icon="PencilSquare" width="24" height="24" aria-label="Edit"></svg>
                        </span>
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                        <span>
                            <svg bootstrap-icon="Trash" width="24" height="24" aria-label="Delete"></svg>
                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.List.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.List.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-id="@Model.Id"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.List.PageIndex - 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-sm btn-primary @prevDisabled">
    Previous
</a>
<a asp-page="./Index"
   asp-route-id="@Model.Id"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.List.PageIndex + 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-sm btn-primary @nextDisabled">
    Next
</a>

<a asp-page="/PlugIns/Index" class="btn btn-sm btn-primary">
    Back
</a>