@model Shaos.Pages.Runtime.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Running Instances</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Instances[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instances[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instances[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instances[0].Exception)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Instances) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exception)
            </td>
        </tr>
}
    </tbody>
</table>

