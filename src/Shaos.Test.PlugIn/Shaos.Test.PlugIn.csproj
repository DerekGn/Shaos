<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <EnableDynamicLoading>true</EnableDynamicLoading>

    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Shaos.Sdk\Shaos.Sdk.csproj">
            <Private>false</Private>
            <ExcludeAssets>runtime</ExcludeAssets>
        </ProjectReference>
    </ItemGroup>

    <Target Name="CopyDLLs" AfterTargets="Build">
        <Message Text="Executing CopyDLLs task" Importance="High" />

        <ItemGroup>
            <OutputFiles Include="$(TargetDir)\*.*"/>
        </ItemGroup>

        <Message Text="Copied build files" Importance="High" />
        
        <Copy
          SourceFiles="@(OutputFiles)"
          DestinationFolder="$(TargetDir)\1" />

        <Message Text="Copied build files to $(CopyToDir). Now zipping it up." Importance="High" />

        <ZipDirectory SourceDirectory="$(TargetDir)" DestinationFile="$(MSBuildProjectName).zip" />

        <Message Text="CopyDLLs task completed" Importance="High" />
    </Target>
</Project>
