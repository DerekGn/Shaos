<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <EnableDynamicLoading>true</EnableDynamicLoading>

    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging" Version="9.0.3" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.3" />
        <PackageReference Include="Serilog.Extensions.Logging" Version="9.0.1" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Shaos.Sdk\Shaos.Sdk.csproj">
            <Private>false</Private>
            <ExcludeAssets>runtime</ExcludeAssets>
        </ProjectReference>
    </ItemGroup>

    <Target Name="ZipOutput" AfterTargets="Build">
        <Message Text="Executing ZipOutput task" Importance="High" />

        <ItemGroup>
            <OutputFiles Include="$(TargetDir)\*.*" />
        </ItemGroup>

        <ZipDirectory SourceDirectory="$(TargetDir)" DestinationFile="$(BaseOutputPath)\$(Configuration)\$(MSBuildProjectName).zip" overwrite="true" />

        <Message Text="ZipOutput task completed" Importance="High" />
    </Target>
</Project>
